<%= render('layouts/errors', :object => @product) %>

<div class="row">
  <div class="col-xs-6">
    <%= bootstrap_form_for @product do |f| %>
      <%= f.text_field :name, hide_label: true, placeholder: "Product Name" %>
      <%= f.text_field :country_of_origin, hide_label: true, placeholder: "Country of Origin" %>
      <%= f.text_field :cost, hide_label: true, placeholder: "Cost" %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
